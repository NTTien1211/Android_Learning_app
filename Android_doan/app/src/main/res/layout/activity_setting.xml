<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".SettingActivity"
    android:layout_height="match_parent">
    <TextView
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="PREMIUM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/black"
            android:layout_width="308dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Update premium" />
        <ImageButton
            android:id="@+id/Premium_part"
            android:background="@color/white"
            android:src="@drawable/icons8premium24"
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:background="@drawable/duongke"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="GENERAL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/black"
            android:layout_width="308dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Notifications" />
        <ImageButton
            android:background="@color/white"
            android:src="@drawable/icons8alarm24"
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/black"
            android:layout_width="308dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Sound" />
        <ImageButton
            android:background="@color/white"
            android:src="@drawable/icons8audio24"
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:background="@drawable/duongke"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       />
    <TextView
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Change Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/old_pass_change"
            android:padding="5dp"
            android:gravity="center"
            android:background="@drawable/khungvien"
            android:textColorHint="#c2c2c2"
            android:hint="Old Password"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:layout_width="308dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_medium" />
        <ImageButton
            android:layout_gravity="center"
            android:background="@color/white"
            android:src="@drawable/icons8help24"
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/new_pass_change"
            android:padding="5dp"
            android:layout_width="308dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:inputType="textPassword"
            android:background="@drawable/khungvien"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:hint="New Password"
            android:textColor="@color/black"
            android:textColorHint="#c2c2c2" />
        <ImageButton
            android:layout_gravity="center"
            android:background="@color/white"
            android:src="@drawable/icons8knowledgesharing24"
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/new_re_pass_change"
            android:textColor="@color/black"
            android:layout_width="308dp"
            android:textColorHint="#c2c2c2"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:inputType="textPassword"
            android:padding="5dp"
            android:background="@drawable/khungvien"
            android:hint="Re_new Password"
            android:fontFamily="@font/poppins_medium"
           />
        <ImageButton
            android:layout_gravity="center"
            android:background="@color/white"
            android:src="@drawable/icons8googleblogsearch24"
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_pass_change"
        android:layout_marginRight="40dp"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:background="@drawable/khungvien"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Save"/>
    <TextView
        android:background="@drawable/duongke"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"/>

    <com.airbnb.lottie.LottieAnimationView
        android:layout_gravity="center"
        android:id="@+id/seeting_layout_json"
        android:layout_marginTop="-20dp"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="280dp"
        android:visibility="visible"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:lottie_fileName="setting.json" />
</LinearLayout>