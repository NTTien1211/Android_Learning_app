<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PremiumActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/backgroundimg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:lottie_loop="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:lottie_autoPlay="true"
        app:lottie_fileName="lf20_HlhzUG.json" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout

                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_width="320dp"
                    android:layout_height="match_parent"
                    android:text="Upgrade to Pro"/>
                <ImageButton
                    android:background="@drawable/khungvien"
                    android:id="@+id/close"
                    android:src="@drawable/ic_baseline_close_24"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

        <androidx.viewpager2.widget.ViewPager2
            android:layout_margin="20dp"
            android:background="@drawable/khungvien"
            android:id="@+id/viewpager2"
            android:layout_width="match_parent"
            android:paddingStart="50dp"
            android:paddingEnd="60dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_height="250dp"
            tools:ignore="MissingConstraints">
        </androidx.viewpager2.widget.ViewPager2>
        <TextView
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get job ready: Stats show Pro users are 40% more likely to get their dream job"/>
        <me.relex.circleindicator.CircleIndicator3
            android:id="@+id/circle_center"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            tools:ignore="MissingConstraints">
        </me.relex.circleindicator.CircleIndicator3>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:background="@drawable/khungvien"
            android:orientation="vertical"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BEST VALUE"
                android:padding="3dp"
                android:gravity="center"
                android:background="@color/teal_200"/>
            <LinearLayout
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_margin="20dp"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/icons8premium64"
                    />
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/gia"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_medium" />
                    <TextView
                        android:layout_margin="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="990.000 Ä‘"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_medium"
                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_gravity="center"
            android:layout_width="130dp"
            android:gravity="center"
            android:layout_marginTop="-12dp"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:background="@drawable/blue_fill__rounded_color"
            android:text="75% OFF"
            android:layout_height="wrap_content"
            />
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_medium"
                android:text="Hurryup! Offer expores in"/>
            <TextView
                android:id="@+id/time_now"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_medium"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:padding="5dp"
            android:fontFamily="@font/poppins_medium"
            android:text="UNLOCK ENTIRE COURSE + CERTIFICATE"
            android:background="@drawable/khungvien_trang"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/white"
            android:text="Version 1"
            android:fontFamily="@font/poppins_medium"
            android:background="@color/black"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>